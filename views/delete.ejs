<% include layout %>
<div class="row">
	<div class="column side">
	</div>
	<div class="column middle">
			<p>Deleting Inventory: </p>
			<br><br>
                <form method="POST" action="/delete/<%= inventories.id %>">
					<b><%= inventories.vin %></b><br><b> <%= inventories.year %></b><b> <%= inventories.make %></b><b> <%= inventories.model %></b>	
					<br>Color: <b> <%= inventories.color %></b>
					<br>Price: <b> <%= inventories.price %></b>
					<br>Zip: <b> <%= inventories.zip %></b>		
                <br><br><br>
                <button type="submit" value="Submit">Delete</button>
            </form>
	</div>
</div>