<% include layout %>
<div class="row">
  <div class="column side">
	
</div>
<div class="column middle">    
<h2>Edit Inventory</h2>
	<form action="/edit/<%= inventory.id %>" method="POST">
		<label>Year </label>
		<div class="col-sm-10">
			<input name="year" type="text" value="<%= inventory.year %>">
		</div>
		<br>			
		<label>Make </label>
		<div class="col-sm-10">
			<input name="make" type="text" value="<%= inventory.make %>">
		</div>
		<br>	
		<label>Model </label>
		<div class="col-sm-10">
			<input name="model" type="text" value="<%= inventory.model %>">
		</div>
		<br>
		<label>Image </label>
		<div class="col-sm-10">
			
		</div>
		<br>
		<label>Price </label>
		<div class="col-sm-10">
			<input name="price" type="text" value="<%= inventory.price %>">
		</div>
		<br>
		<label>Color </label>
		<div class="col-sm-10">
			<input name="color" type="text" value="<%= inventory.color %>">
		</div>
		<br>
		<label>Type </label>
		<div class="col-sm-10">
			<input name="type" type="text" value="<%= inventory.type %>">
		</div>
		<br>
		<label>Features </label>
		<div class="col-sm-10">
			<input name="feature" value="<%= inventory.feature %>">
		</div>
		 
		<br>
		<label>Zip Code </label>
		<div class="col-sm-10">
			<input name="zip" value="<%= inventory.zip %>">
		</div>
		<br>
		<button type="submit" value="Submit">Certify</button>
	</form>	
	<br>
<button onclick="goBack()">Go Back</button>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
<script>
$(document).ready(function(){
	$('.delete-inventory').on('click', function(e){
		$target = $(e.target);
		const id = $target.attr('data-id');
		$.ajax({
			type:'DELETE',
			url: '/manage/'+id ,
			success: function(response){
				alert('Delete Inventory');
				window.location.href='/users/dashboard';
			},
			error: function(err){
				console.log(err);
			}
		});
	});
	$('.sold').on('click', function(e){
		$target = $(e.target);
		const id = $target.attr('data-id');
		$.ajax({
			type:'POST',
			url: '/manage/'+id ,
			data: {'hide':'sold'},
			success: function(data){
				alert('SOLD Inventory');
				window.location.href='#';
			},
			error: function(err){
				console.log(err);
			}
		});
	});
	
});

function goBack() {
  window.history.back();
}

</script>